@model BookReview.MVC.Models.LoginViewModel

<h2>Logga in</h2>

<form method="post">
    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>

    <div>
        <label>Lösenord</label>
        <input asp-for="Password" type="password" />
    </div>

    <button type="submit">Logga in</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
