@model BookReview.Models.ReviewViewModel

<div class="review-page-wrapper">
    <div class="row">
        <div class="col-md-8 col-lg-6 mx-auto">

            <div class="review-form-container">

                <h3 class="text-center mb-4">📖 Skriv en recension</h3>
                <hr class="mb-4" />

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <input type="hidden" asp-for="BookId_FK" />

                    <div class="mb-3">
                        <label asp-for="ReviewerName" class="form-label"></label>
                        <input asp-for="ReviewerName" class="form-control" />
                        <span asp-validation-for="ReviewerName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Rating" class="form-label"></label>
                        <div class="star-rating d-flex flex-row-reverse justify-content-end">
                            <input type="radio" id="star5" name="Rating" value="5" />
                            <label for="star5" title="5 stjärnor">★</label>
                            <input type="radio" id="star4" name="Rating" value="4" />
                            <label for="star4" title="4 stjärnor">★</label>
                            <input type="radio" id="star3" name="Rating" value="3" />
                            <label for="star3" title="3 stjärnor">★</label>
                            <input type="radio" id="star2" name="Rating" value="2" />
                            <label for="star2" title="2 stjärnor">★</label>
                            <input type="radio" id="star1" name="Rating" value="1" />
                            <label for="star1" title="1 stjärna">★</label>
                        </div>
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Text" class="form-label"></label>
                        <textarea asp-for="Text" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-cozy w-100">Skicka recension</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>