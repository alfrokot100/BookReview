
@model BookReview.MVC.ViewModels.BookDetailsViewModel

@{
    ViewData["Title"] = "Bokdetaljer";
}

<style>
    body {
        background-color: #1e1e1e;
        color: #e0e0e0;
    }

    .card {
        background-color: #2a2a2a;
        color: #e0e0e0;
        border-radius: 16px;
    }

    h2, h5, p, strong {
        color: #e0e0e0 !important;
    }

    .badge {
        background-color: #3a3fbd !important;
        color: #fff;
    }

    .btn-outline-secondary {
        border-color: #bbbbbb;
        color: #e0e0e0;
    }

    .btn-outline-secondary:hover {
        background-color: #bbbbbb;
        color: #1e1e1e;
    }

    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
    }

    .btn-primary:disabled {
        opacity: 0.6;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">@Model.Title</h2>
                <span class="badge fs-6">@Model.Genre</span>
                <h2 class="text-primary mb-0">@Model.Book.Title</h2>
                <span class="badge bg-secondary fs-6">@Model.Book.Genre</span>
            </div>

            <h5 class="mb-3">av @Model.Author</h5>

            <p class="lead">@Model.Description</p>
            <h5 class="text-muted mb-3">av @Model.Book.Author</h5>
            <p class="lead">@Model.Book.Description</p>
            <p class="text-muted"><strong>Publicerad:</strong> @Model.Book.PublishedYear</p>

            

            <hr />

            <div class="mt-4 d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    ← Tillbaka till böcker
                </a>

                <a asp-controller="Review"
                   asp-action="Create"
                   asp-route-bookId="@Model.Book.Id"
                   class="btn btn-primary">
                    Skriv en recension
                </a>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h3>Recensioner för @Model.Book.Title</h3>

        @if (Model.Reviews != null && Model.Reviews.Any())
        {
            @foreach (var review in Model.Reviews)
            {
                <div class="card my-3">
                    <div class="card-body">
                        <h5 class="card-title">@review.ReviewerName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Betyg: @review.Rating / 5</h6>
                        <p class="card-text">@review.Text</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Det finns inga recensioner för den här boken än. Bli den första!</p>
        }
    </div>
</div>