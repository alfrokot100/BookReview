@model BookReview.MVC.Models.BookViewModel

@{
    ViewData["Title"] = "Bokdetaljer";
}

<style>
    body {
        background-color: #1e1e1e;
        color: #e0e0e0;
    }

    .card {
        background-color: #2a2a2a;
        color: #e0e0e0;
        border-radius: 16px;
    }

    h2, h5, p, strong {
        color: #e0e0e0 !important;
    }

    .badge {
        background-color: #3a3fbd !important;
        color: #fff;
    }

    .btn-outline-secondary {
        border-color: #bbbbbb;
        color: #e0e0e0;
    }

    .btn-outline-secondary:hover {
        background-color: #bbbbbb;
        color: #1e1e1e;
    }

    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
    }

    .btn-primary:disabled {
        opacity: 0.6;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">@Model.Title</h2>
                <span class="badge fs-6">@Model.Genre</span>
            </div>

            <h5 class="mb-3">av @Model.Author</h5>

            <p class="lead">@Model.Description</p>

            <p>
                <strong>Publicerad:</strong> @Model.PublishedYear
            </p>

            <hr />

            <div class="mt-4 d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    ← Tillbaka till böcker
                </a>

                <button class="btn btn-primary" disabled>
                    Lägg till recension (kommer snart)
                </button>
            </div>
        </div>
    </div>
</div>
