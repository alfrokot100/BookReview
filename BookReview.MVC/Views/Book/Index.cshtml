@model IEnumerable<BookReview.MVC.Models.BookViewModel>

@{
    ViewData["Title"] = "Böcker";
}

<style>
    body {
        background-color: #1e1e1e;
        color: #e0e0e0;
    }

    .card, .alert {
        background-color: #2a2a2a;
        color: #e0e0e0;
    }

    .book-card {
        border-radius: 16px;
        overflow: hidden;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        background-color: #2a2a2a;
    }

        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(255,255,255,0.1);
        }

    .book-header {
        background: linear-gradient(135deg, #3a3fbd, #1f227a);
        color: white;
        padding: 16px;
        font-weight: 600;
    }

    .search-box {
        border-radius: 30px;
        padding-left: 20px;
        background-color: #2a2a2a;
        border: 1px solid #555;
        color: #e0e0e0;
    }

        .search-box::placeholder {
            color: #aaa;
        }

    .search-btn {
        border-radius: 30px;
    }

    .badge {
        background-color: #3a3fbd !important;
    }

    .btn-outline-primary {
        border-color: #6c8cff;
        color: #6c8cff;
    }

        .btn-outline-primary:hover {
            background-color: #6c8cff;
            color: #1e1e1e;
        }

    h2, h5, h6, small {
        color: #e0e0e0 !important;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-primary fw-bold">📚 Våra böcker</h2>

        <!-- Sökfält -->
        <form asp-action="Index" method="get" class="d-flex mb-4" style="max-width: 400px;">
            <input type="text" name="searchString" class="form-control me-2 search-box"
                   value="@Context.Request.Query["searchString"]"
                   placeholder="Sök efter titel eller författare..." />
            <button type="submit" class="btn btn-primary search-btn">Sök</button>
        </form>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            Inga böcker har lagts till ännu.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var book in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-sm book-card border-0 h-100">

                        <div class="book-header">@book.Title</div>

                        <div class="card-body d-flex flex-column">
                            <h6 class="text-muted mb-2">@book.Author</h6>

                            <p class="card-text text-truncate" style="max-height: 3.5em;">
                                @book.Description
                            </p>

                            <div class="mt-2 mb-3">
                                <span class="badge bg-primary">@book.Genre</span>
                                <small class="text-muted d-block mt-1">Publicerad: @book.PublishedYear</small>
                            </div>

                            <a asp-action="Details" asp-route-id="@book.Id"
                               class="btn btn-sm btn-outline-primary mt-auto">
                                Visa mer →
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
